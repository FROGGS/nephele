{
  "name": "nephele",
  "version": "1.0.0-dev",
  "description": "A pluggable WebDAV, CardDAV, and CalDAV server for Node.js and Express.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "test -d dist && rm -r dist || true",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "build": "tsc",
    "watch": "tsc --watch",
    "docs": "typedoc",
    "prepare": "husky install && npm run lint && npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sciactive/nephele.git"
  },
  "keywords": [
    "webdav",
    "carddav",
    "caldav",
    "dav",
    "server",
    "express",
    "middleware"
  ],
  "author": "Hunter Perrin <hperrin@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/sciactive/nephele/issues"
  },
  "homepage": "https://github.com/sciactive/nephele#readme",
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@tsconfig/recommended": "^1.0.1",
    "@types/basic-auth": "^1.1.3",
    "@types/content-type": "^1.1.5",
    "@types/cookie-parser": "^1.4.3",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.0",
    "@types/mmmagic": "^0.4.30",
    "@types/xml2js": "^0.4.11",
    "authenticate-pam": "^1.0.5",
    "basic-auth": "^2.0.1",
    "check-disk-space": "^3.3.1",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.1",
    "mmmagic": "^0.5.3",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.2",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.4",
    "userid": "^1.2.5"
  },
  "dependencies": {
    "@sciactive/splitn": "^2.0.0",
    "content-type": "^1.0.4",
    "cookie-parser": "^1.4.6",
    "debug": "^4.3.4",
    "express": "^4.18.1",
    "nanoid": "^4.0.0",
    "xml2js": "^0.4.23"
  },
  "engines": {
    "node": ">=16"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
