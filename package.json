{
  "name": "nephele",
  "version": "1.0.0-dev",
  "description": "A pluggable WebDAV, CardDAV, and CalDAV server for Node.js and Express.",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "test -d dist && rm -r dist || true",
    "lint:format": "prettier --write .",
    "lint:check": "prettier --check .",
    "build": "tsc",
    "watch": "tsc --watch",
    "docs": "typedoc",
    "prepare": "husky install && npm run lint:check && npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sciactive/nephele.git"
  },
  "keywords": [
    "webdav",
    "carddav",
    "caldav",
    "dav",
    "server",
    "express",
    "middleware"
  ],
  "author": "Hunter Perrin <hperrin@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/sciactive/nephele/issues"
  },
  "homepage": "https://github.com/sciactive/nephele#readme",
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@tsconfig/recommended": "^1.0.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.2",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "express": "^4.18.1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
